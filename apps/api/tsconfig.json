{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // NestJS requires CommonJS
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    // NestJS decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // Build output
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    // Override base - enable strict mode for better type safety
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    // NestJS compatibility
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Local paths only (workspace paths inherited from base)
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/entities/*": [
        "src/database/entities/*"
      ],
      "@/modules/*": [
        "src/modules/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/interfaces/*": [
        "src/interfaces/*"
      ],
      "@/exceptions/*": [
        "src/exceptions/*"
      ],
      "@/guards/*": [
        "src/guards/*"
      ],
      "@/decorators/*": [
        "src/decorators/*"
      ],
      "@/interceptors/*": [
        "src/interceptors/*"
      ],
      "@prisma": [
        "prisma/generated"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "generated/**/*",
    "prisma/generated"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/utils"
    }
  ]
}