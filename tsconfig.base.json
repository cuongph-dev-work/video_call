{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Module system
    "module": "ESNext",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "bundler",
    // Emit options - required for project references
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Common module settings
    "esModuleInterop": true,
    "isolatedModules": true,
    // Common build settings
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Strictness settings
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    // Path resolution
    "baseUrl": ".",
    "paths": {
      "@video-call/types": [
        "./packages/types/src"
      ],
      "@video-call/utils": [
        "./packages/utils/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}